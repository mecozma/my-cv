-
  var myFullName = 'Eduard Cozma';
  var myJobTitle = 'Markup destroyer';
  var socialList = [
    {icon: 'github', url: 'https://github.com/mecozma'},
    {icon: 'codepen', url: 'https://codepen.io/mecozma/'},
    {icon: 'facebook', url: 'https://www.facebook.com/mecozma'},
    {icon: 'linkedin2', url: 'https://www.linkedin.com/in/eduardcozma/'},
    {icon: 'wordpress', url: 'https://mecozma.wordpress.com/'}
  ]
#landing-page
.landing-page
  .landing-page__wrapper
    h1.landing-page__name=myFullName
    //- h1.landing-page__name #{myFullName} --- used if interpolation is needed
    h2.landing-page__title=myJobTitle
    ul.landing-page__social
      each social, key in socialList
        li.landing-page__item
          label.landing-page__label(for=`message-box-id-${key}`)
            span(class=`my-cv_icon--${social.icon}`)
    .landing-page__box-body
      input.landing-page__box-radio(type="radio", name="media-button", checked, id="default-message-radio")
      .landing-page__box-message Click the above icons to reveal
      .landing-page__box-header 
        .landing-page__box-info Click to visit
        label.landing-page__box-close(for="default-message-radio") &times;
      each social, key in socialList
        input.landing-page__box-radio(type="radio" name="media-button" id=`message-box-id-${key}`)
        .landing-page__box-message
          a.landing-page__box-link(href=social.url, target="_blank")=social.url